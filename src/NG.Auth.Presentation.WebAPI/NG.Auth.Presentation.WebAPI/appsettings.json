{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IdentityServer4": "Information"
      }
    }
  },
  "Documentation": {
    "Title": "Authentication API",
    "Version": "v1"
  },
  "AllowedHosts": "*",
  "Errors": {
    "UserNotFound": {
      "ErrorCode": 101,
      "Message": "There was no User found with such credentials."
    },
    "WrongPassword": {
      "ErrorCode": 102,
      "Message": "The password does not match the actual user's password."
    }
  }
}
